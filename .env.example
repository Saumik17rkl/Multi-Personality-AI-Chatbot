# ====================================================
# LLM API Keys (Required)
# ====================================================
# Get your Groq API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Get your Google Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ====================================================
# Model Configurations (Optional)
# ====================================================
# Default model for Groq (llama3-70b-8192, mixtral-8x7b-32768, etc.)
GROQ_MODEL=llama3-70b-8192

# Default model for Gemini (gemini-1.5-flash, gemini-2.0-flash-exp, etc.)
GEMINI_MODEL=gemini-1.5-flash

# ====================================================
# Database Configuration (Required)
# ====================================================
# MongoDB connection string
MONGO_URI=your_mongodb_connection_string_here

# Database name
MONGO_DB_NAME=your_database_name_here

# ====================================================
# Application Settings (Optional)
# ====================================================
# Set to 'False' in production
DEBUG=True

# Secret key for session management

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
